<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lpm.shop.mapper.MenuMapper">
    <resultMap id="MenuResoultMap" type="com.lpm.shop.entity.Menu">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="path" property="path"/>
        <result column="queue" property="queue"/>
    </resultMap>

    <select id="findAll" resultMap="MenuResoultMap" resultType="com.lpm.shop.entity.Menu">
        select * from menu_inf
    </select>

    <select id="findAllByParentId" resultMap="MenuResoultMap" resultType="com.lpm.shop.entity.Menu">
        select * from menu_inf where parent_id = #{parentId}
    </select>
</mapper>